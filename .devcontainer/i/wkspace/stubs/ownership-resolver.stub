#! /usr/bin/env bash

set -e

for arg in #OLIST
do
   if [ -e $arg ]
   then
      # Add recursive option to command if $arg is a folder ...
      if [ -d $arg ]
      then
         recursive_opt='-R'
      else
         recursive_opt=""
      fi
      # Apply ownership change
      chown ${username}:root $recursive_opt $arg
   fi
done

set +e